root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.json]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.tsx]
indent_style = space
indent_size = 2

[*.ts]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[*.scss]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[*.env]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.lock]
indent_style = space
indent_size = 2

[*.svg]
indent_style = space
indent_size = 2

[*.txt]
